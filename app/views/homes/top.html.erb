<div class="bookshow_background">

<div class="container">
        <% @books.each do |f| %>

  <div class="book_index">
                <%= attachment_image_tag f, :book_image, format: 'jpeg', fallback: "no_image.jpg", class: "image", size: '200x200' %>
                <p>タイトル <%= f.book_title %></p>
                <p>著者 <%= f.author %></p>
                <%= link_to '本の内容', book_path(f) %>
                <% if current_user.try(:admin?) %>
                <%= link_to "削除", book_path(f),  method: :delete  %>
                <%= link_to '編集', edit_book_path(f) %>
                <% else %>
                <%end%>
                <% if user_signed_in? %>
                <%= link_to 'カートへ入れる', carts_path(user_id: current_user.id, book_id: f.id),method: :create %>
                <% else %>
                <% end %>
                </div>
        <% end %>
        </div>
</div>
