   <h1>本の編集</h1>

<%= form_for @book do |f| %>

  <div class="field">
   <h4>題名</h4>
   <%= f.text_area :book_title %>
   </div>
  <div class="field">
   <h4>著者</h4>
   <%= f.text_field :author %>
   </div>
  <div class="field">
   <h4>分類</h4>
   <%= f.select :category, [["小説", "小説"],["自伝", "自伝"],["絵本", "絵本"]] %>
   </div>
  <div class="field">
   <h4>あらすじ</h4>
   <%= f.text_field :sumary %>
   </div>
  <div class="field">
   <h4>金額</h4>
   <%= f.text_field :book_price %>
</div>

 <h4 id="chapter">
   <%= f.fields_for :chapters do |chapter| %>
     <%= render 'chapter_fields', f: chapter %>
   <% end %>
   <h4 id="links">
     <%= link_to_add_association '章を追加',f, :chapters %>
   </h4>
   <%= f.submit '登録' %>
 </h4>
<% end %>