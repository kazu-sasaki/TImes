<div class="pc_background">
<body>
<div id="form">
<div class="logo">
<h1 class="text-center head">登録内容変更</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
      <div class="field">
        <h5>本名</h5>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'name', placeholder: "例：鈴木　一郎",class: "form-control" %>
      </div>
      <div class="field">
        <h5>フリガナ</h5>
        <%= f.text_field :furigana, autofocus: true, autocomplete: "furigana", class: 'furigana', placeholder: "スズキ　イチロウ",class: "form-control" %>
      </div>
        <div class="field">
        <h5>ニックネーム</h5>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: 'nickname', placeholder: "イチロー",class: "form-control" %>
      </div>
      <div class="field">
        <h5>郵便番号</h5>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'postal_code', placeholder: "例：1234567",class: "form-control" %>
      </div>
      <div class="field">
        <h5>住所</h5>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "address", class: 'postal_code', placeholder: "東京都渋谷区東1-2-3",class: "form-control" %>
      </div>
      <div class="field">
        <h5>電話番号</h5>
        <%= f.text_field :tel, autofocus: true, autocomplete: "tel", class: 'tel', placeholder: "例：09012345678",class: "form-control" %>
      </div>
      <div class="field">
        <h5>メールアドレス</h5>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'email',class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(半角英数字<%= @minimum_password_length %>文字以上で設定してください)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "password",class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "password_confirm",class: "form-control" %>
      </div>

    <div class="pass_edit_field">
      <p><b>現在登録しているパスワード</b></p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: " form-control" %>
    </div>
      <br>
      <div class="text-right">
        <!-- <%= f.submit "会員登録する" %> -->
         <button type=submit class="btn btn-danger">更新</button>
      </div>
<% end %>
</div>
</body>
</div>
